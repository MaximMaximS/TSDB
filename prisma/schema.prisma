// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Episode {
  id         Int                @id
  seasonNo   Int
  episodeNo  Int
  directedBy String
  writtenBy  String
  data       EpisodeData[]
}

model EpisodeData {
  episodeId Int     @id
  episode   Episode @relation(fields: [episodeId], references: [id])

  country  String
  title    String
  premiere DateTime
  plot     String

  @@unique([episodeId, country])
}
